<% layout('/layouts/boilerplate') %>

<div class="container-fluid px-0">
  <div class="row justify-content-center">
    <div class="col-12 col-xl-10">
      
      <div class="px-3 px-md-4 py-3">
        <h2 class="fw-semibold mb-2" style="font-size: 1.6rem">
          <%= listing.title %>
        </h2>
        <div class="d-flex align-items-center gap-3 text-muted">
          <span style="font-size: 0.9rem">
            <i class="bi bi-star-fill text-dark" style="font-size: 0.75rem"></i>
            <span class="text-dark fw-semibold">4.8</span> Â· <%= listing.reviews.length %> <%= listing.reviews.length === 1 ? 'review' : 'reviews' %>
          </span>
          <span style="font-size: 0.9rem">
            <i class="bi bi-geo-alt"></i>
            <%= listing.location %>, <%= listing.country %>
          </span>
        </div>
      </div>

      <div class="px-3 px-md-4 mb-4">
        <div class="position-relative" style="border-radius: 12px; overflow: hidden">
          <img
            src="<%= listing.image.url %>"
            class="img-fluid w-100"
            alt="listing_img"
            style="object-fit: cover; height: 480px; max-height: 60vh"
          />
        </div>
      </div>

      <div class="row px-3 px-md-4 g-4 align-items-start">
        
        <div class="col-lg-7">
          <div class="pb-4 border-bottom">
            <h5 class="fw-semibold mb-3" style="font-size: 1.3rem">About this place</h5>
            <p class="text-secondary lh-lg" style="font-size: 0.95rem">
              Owned by: <%= listing.owner ? listing.owner.username : "Unknown Owner (Deleted)" %>
            </p>
            <p class="text-secondary lh-lg" style="font-size: 0.95rem">
              <%= listing.description %>
            </p>
          </div>

          <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
          <div class="d-flex gap-3 py-4 border-bottom">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-dark rounded-3 px-4 py-2 flex-fill" style="font-weight: 500">
              <i class="bi bi-pencil me-2"></i>Edit listing
            </a>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="flex-fill" onsubmit="return confirm('Are you sure you want to delete this listing?');">
              <button class="btn btn-outline-danger rounded-3 px-4 py-2 w-100" style="font-weight: 500">
                <i class="bi bi-trash3 me-2"></i>Delete
              </button>
            </form>
          </div>
          <% } %>

          <div class="py-4">
            <h5 class="fw-semibold mb-4" style="font-size: 1.3rem">
              <i class="bi bi-star-fill me-2"></i>Reviews
            </h5>

            <% if(currUser) {%>
            <div class="mb-5">
              <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mb-3">
                  <label class="form-label fw-semibold mb-2" style="font-size: 0.95rem">Your Rating</label>
                  <fieldset class="starability-slot">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
                </div>
                <div class="mb-3">
                  <label for="comment" class="form-label fw-semibold" style="font-size: 0.95rem">Your Review</label>
                  <textarea name="review[comment]" id="comment" class="form-control rounded-3" rows="4" placeholder="Share your experience..." required style="resize: none; border: 1px solid #ddd"></textarea>
                  <div class="invalid-feedback">Please add a comment to your review</div>
                </div>
                <button type="submit" class="btn btn-dark rounded-3 px-4 py-2" style="font-weight: 500">Submit Review</button>
              </form>
            </div>
            <% } %>

            <div class="row row-cols-1 g-3">
              <% for(review of listing.reviews) { %>
              <div class="col">
                <div class="p-3 border rounded-3" style="background: #fafafa">
                  <div class="d-flex justify-content-between align-items-start mb-2">
                    <div class="d-flex align-items-center gap-2">
                      <div class="avatar-circle" style="width: 40px; height: 40px; border-radius: 50%">
                        <%= review.author && review.author.username ? review.author.username[0].toUpperCase() : 'J' %>
                      </div>
                      <div>
                        <h6 class="mb-0 fw-semibold" style="font-size: 0.95rem">
                          <%= review.author ? review.author.username : "Anonymous" %>
                        </h6>
                        <small class="text-muted">Just now</small>
                      </div>
                    </div>
                    <% if(currUser && review.author && currUser._id.equals(review.author._id)) { %>
                    <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                      <button class="btn btn-sm btn-dark">del</button>
                    </form>
                    <% } %>
                  </div>
                  <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                  <p class="mb-0 text-secondary" style="font-size: 0.9rem; line-height: 1.6">
                    <%= review.comment %>
                  </p>
                </div>
              </div>
              <% } %>
            </div>
          </div>

          <div class="py-4 border-top mt-4">
            <h5 class="fw-semibold mb-3">Where you'll be</h5>
            <div id="map" style="height: 400px; width: 100%; border-radius: 12px; border: 1px solid #ddd;"></div>
          </div>
        </div>

        <div class="col-lg-5">
          <div class="position-sticky" style="top: 100px !important;">
            <div class="card shadow border-0 rounded-4 p-4">
              
              <div class="mb-3">
                <span class="fs-4 fw-bold">â‚¹<%= listing.price.toLocaleString("en-IN") %></span>
                <span class="text-muted"> / night</span>
              </div>

              <form action="/checkout" method="GET" id="bookingForm" class="needs-validation" novalidate>
                
                <input type="hidden" name="listingId" value="<%= listing._id %>">

                <div class="row g-0 border rounded-3 mb-3">
                  <div class="col-6 p-3 border-end">
                    <label class="form-label text-uppercase fw-bold" style="font-size: 0.7rem">Check-in</label>
                    <input type="text" name="checkIn" id="checkInDate" class="form-control border-0 p-0" placeholder="Add date" required>
                  </div>
                  <div class="col-6 p-3">
                    <label class="form-label text-uppercase fw-bold" style="font-size: 0.7rem">Check-out</label>
                    <input type="text" name="checkOut" id="checkOutDate" class="form-control border-0 p-0" placeholder="Add date" required>
                  </div>
                </div>

                <div class="mb-3">
                  <label class="form-label fw-bold">Guests</label>
                  <input type="number" min="1" value="1" class="form-control" name="guests">
                </div>

                <div id="price-details" class="mb-3 d-none">
                  <div class="d-flex justify-content-between mb-2">
                    <span>â‚¹<%= listing.price.toLocaleString("en-IN") %> x <span id="total-nights">0</span> nights</span>
                    <span>â‚¹<span id="base-price">0</span></span>
                  </div>
                  <div class="d-flex justify-content-between mb-2">
                    <span>Service fee (10%)</span>
                    <span>â‚¹<span id="service-fee">0</span></span>
                  </div>
                  <hr>
                  <div class="d-flex justify-content-between fw-bold">
                    <span>Total</span>
                    <span>â‚¹<span id="total-price">0</span></span>
                  </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 btn-lg rounded-pill" style="background-color: #fe424d; border: none;">
                  Reserve & Pay
                </button>
              </form>

              <p class="text-center text-muted mt-3" style="font-size: 0.9rem">You will be redirected to payment</p>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<script>
  const bookingForm = document.getElementById("bookingForm");

  if (bookingForm) {
    bookingForm.addEventListener("submit", (event) => {
      
      const checkInInput = document.getElementById("checkInDate");
      const checkOutInput = document.getElementById("checkOutDate");

      // 1. Pehle purani Red Classes hatao (Reset)
      checkInInput.classList.remove("is-invalid");
      checkOutInput.classList.remove("is-invalid");

      // 2. MANUAL CHECK: Agar khaali hai...
      if (checkInInput.value === "" || checkOutInput.value === "") {
        
        // Roko!
        event.preventDefault();
        event.stopPropagation();
        
        // --- ðŸ”´ THE FIX: Zabardasti Red Class Lagao ---
        // Kyunki browser isse valid maan raha hai, hum manually 'is-invalid' lagayenge
        if(checkInInput.value === "") checkInInput.classList.add("is-invalid");
        if(checkOutInput.value === "") checkOutInput.classList.add("is-invalid");
        
        // Form par bhi class laga do (Design ke liye)
        bookingForm.classList.add("was-validated");
        
        return; // Khatam
      }

      // 3. Agar Dates sahi hain, toh baaki standard check karo (Guests ke liye)
      if (!bookingForm.checkValidity()) {
        event.preventDefault();
        event.stopPropagation();
      }
      
      bookingForm.classList.add("was-validated");
    });
  }
</script>

